<div class="m-1">
  <h2>Editar cupom</h2>
<hr />
<form action="/cupom/atualizar" method="POST">
<input type="hidden" name="id" value="{{cupom._id}}">
  <div class="form-group">
    <label for="name">Nome*</label>
    <input type="text" 
    name="name" 
    id="name" 
    class="form-control" 
    value="{{cupom.name}}"
    required 
    />
  </div>
  <div class="form-group">
    <label for="value">Valor*</label>
    <input
      type="number"
      name="value"
      id="value"
      class="form-control"
      step=".1"
      value="{{cupom.value}}"
      required
    />
  </div>
  <div class="form-group">
    <label for="validity">Validade*</label>
    <input
      type="text"
      name="validity"
      id="validity"
      class="form-control"
      value="{{cupom.validity}}"
      required
    />
  </div>
  <button class="btn btn-dark mt-2">Atualizar</button>
</form>
</div>